<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
         Customize your theme here.

    </style>-->

    <style name="Theme.Due" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_due</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Due</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Due</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Due</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Due</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_due</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_due</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Due</item>
        <item name="android:icon">@android:color/transparent</item>

    </style>

    <style name="ActionBar.Solid.Due" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_due</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_due</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_due</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Due</item>
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="ActionBar.Transparent.Due" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_due</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Due</item>
    </style>

    <style name="PopupMenu.Due" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_due</item>
    </style>

    <style name="DropDownListView.Due" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_due</item>
    </style>

    <style name="DropDownNav.Due" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_due</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_due</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_due</item>
    </style>

    <style name="ProgressBar.Due" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_due</item>
    </style>

    <style name="ActionButton.CloseMode.Due" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_due</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Due.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Due</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Due</item>
    </style>


</resources>
